<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amalkjose.whatsappassistant.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_main" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:backgroundTint="@android:color/white"
        android:layout_gravity="top|start"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="35dp"
        app:srcCompat="@drawable/send_later" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="120dp"
        app:backgroundTint="@android:color/white"
        android:layout_height="120dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="80dp"
        android:layout_marginRight="35dp"
        app:srcCompat="@drawable/send_group" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center|start"
        android:layout_marginTop="30dp"
        app:backgroundTint="@android:color/white"
        android:layout_marginLeft="35dp"
        app:srcCompat="@drawable/send_reply" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center|end"
        app:backgroundTint="@android:color/white"
        android:layout_marginTop="30dp"
        android:layout_marginRight="35dp"
        app:srcCompat="@drawable/send_busy" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab5"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="bottom|start"
        app:backgroundTint="@android:color/white"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="35dp"
        app:srcCompat="@drawable/send_history" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab6"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:backgroundTint="@android:color/white"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="35dp"
        app:srcCompat="@drawable/send_settings" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_gravity="top|left"
        android:layout_marginTop="205dp"
        android:layout_marginLeft="35dp"
        android:text="Shedule Send"/>
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="top|right"
        android:textStyle="bold"
        android:layout_marginTop="205dp"
        android:layout_marginRight="35dp"
        android:text="Bulk Send"/>
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="35dp"
        android:text="Auto Reply"/>
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_gravity="center|right"
        android:layout_marginTop="180dp"
        android:layout_marginRight="35dp"
        android:text="Busy Mode"/>
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:textStyle="bold"
        android:layout_marginBottom="27dp"
        android:textAlignment="center"
        android:layout_marginLeft="35dp"
        android:text="Activity Log"/>
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="27dp"
        android:layout_marginRight="35dp"
        android:text="Settings"/>
</android.support.design.widget.CoordinatorLayout>
